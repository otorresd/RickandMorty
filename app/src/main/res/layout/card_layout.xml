<?xml version="1.0" encoding="utf-8"?>
     <!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp"
        android:background="#333">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/characterImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/orig_737410"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:background="@android:drawable/screen_background_dark_transparent"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="30dp"
                    android:textColor="#f5f5f5"
                    android:textStyle="bold"
                    android:text="Name: "/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#333">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#333">
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="17dp"
                android:textColor="#9e9e9e"
                android:textStyle="bold"
                android:text="Status: "
                android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/rstatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:padding="8dp"
                    android:text="Status: "
                    android:textColor="#ff9800"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#333">
            <TextView
                android:id="@+id/speciesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="17dp"
                android:textColor="#9e9e9e"
                android:textStyle="bold"
                android:text="Species: "
                android:layout_gravity="start"
                android:gravity="start"/>

                <TextView
                    android:id="@+id/rspeciesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="#ff9800"
                    android:textStyle="bold"
                    android:text="Species: "
                    android:layout_gravity="end"
                    android:gravity="end"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#333">

                <TextView
                    android:id="@+id/genderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="#9e9e9e"
                    android:textStyle="bold"
                    android:text="Gender: "
                    android:layout_gravity="start"
                    android:gravity="start"/>

                <TextView
                    android:id="@+id/rgenderTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="#ff9800"
                    android:textStyle="bold"
                    android:text="Gender: "
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#333">

            <TextView
                android:id="@+id/originTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="17dp"
                android:textColor="#9e9e9e"
                android:textStyle="bold"
                android:text="Origin: "
                android:layout_gravity="start"
                android:gravity="start"/>

                <TextView
                    android:id="@+id/roriginTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="#ff9800"
                    android:textStyle="bold"
                    android:text="Origin: "
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#333">

            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="17dp"
                android:textColor="#9e9e9e"
                android:textStyle="bold"
                android:text="Last Location: "
                android:layout_gravity="start"
                android:gravity="start"/>

                <TextView
                    android:id="@+id/rlocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="#ff9800"
                    android:textStyle="bold"
                    android:text="Last Location: "
                    android:layout_gravity="end"
                    android:gravity="end"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#333">

            <TextView
                android:id="@+id/episodeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="17dp"
                android:textColor="#9e9e9e"
                android:textStyle="bold"
                android:text="Episode: "
                android:layout_gravity="start"
                android:gravity="start"/>

                <TextView
                    android:id="@+id/repisodeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="17dp"
                    android:textColor="#ff9800"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_gravity="end"
                    android:gravity="end"/>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
